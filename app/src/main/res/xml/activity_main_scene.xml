<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_marginEnd="140dp"
            motion:layout_constraintVertical_bias="0.705"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/recycler_view"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:id="@+id/btn_add_task" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="141dp"
            android:layout_height="212dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.342"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.455"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="236dp" />
        <Constraint
            motion:layout_constraintVertical_bias="0.561"
            android:layout_height="212dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="236dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.259"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="141dp"
            android:id="@+id/recycler_view" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>